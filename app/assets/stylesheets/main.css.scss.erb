.btn-default {
  color: white;
  background-color: #e5e5e5;
  border: none;
  border-radius: 0;
  padding: 0.7rem 4.5rem;
  margin-top: 4rem;
}

.dropup .dropdown-menu {
  background-color: #e5e5e5;
  top: 67%;
  bottom: 20%;
  margin: 5px 4px -20px 4px;
  border: none;
  border-radius: 0;
  text-align: center;
  right: 0;
  webkit-box-shadow: none;
  box-shadow: none;
}

@media (max-width: 1199px) {
  .btn-default {
    padding: 0.7rem 2.9rem;
  }
  .dropup .dropdown-menu {
    top: 64%;
  }
}

@media (max-width: 991px) {
  .btn-default {
    padding: 0.7rem 5.8rem;
  }
  .dropup .dropdown-menu {
    top: 71%;
    margin: 5px 20px -30px 20px;
  }
}

@media (max-width: 767px) {
  .btn-default {
    padding: 0.7rem 7rem;
  }
  .dropup .dropdown-menu {
    top: 75%;
    margin: 5px 102px -30px 102px;
  }
}

.box {
  height: 300px; 
  width: 300px;
}

.slider {
  overflow-y: hidden;
  max-height: 500px;  
  transition-property: all;
  transition-duration: .5s;
  transition-timing-function: cubic-bezier(0, 1, 0.5, 1);
}

.slider.closed {
  max-height: 0px;
}

.little-box {
  margin-top: 8rem;
}

.title{cursor: pointer;}


.links {
  overflow: hidden;
  height: 150px;
  -webkit-transition: height .3s linear, padding-top .3s linear;
  
}

.toggled {
  height: 50px;
}

