.feature {
  height: 476px; 
}

.arrow {
  vertical-align: middle;
  height: 60px;
  width: auto;
  padding-right: 100px;
  padding-left: 0px;
  text-align: center;
  cursor: pointer;
}

.carousel-control.right {
  top: 39%;
  right: -90px;
  background-image: none;
}

@media (max-width: 991px) {

  .arrow {
    height: 65px;
    padding-left: 135px;
}

  .carousel-control.right {
    top: 35%;
    right: 90px;
    background-image: none;
  }
}

@media (max-width: 767px) {

  .arrow {
    height: 55px;
    padding-left: 120px;
}

  .carousel-control.right {
    right: 90px;
    background-image: none;
  }
}

#lookbook {
  padding: 0px;
  float: center;
}

.photos {
  padding: 0px;
  margin: 0 10px 0 10px;
  position: relative;
  width: 98.4%;
  overflow: hidden;
}

.ver {
    padding: 0px 5px 0px 0px;
}

.hor {
    padding: 0px 0px 0px 5px;
}

@media screen and (min-width: 991px) {
    .image-horizontal-up {
      padding-bottom: 10px;
    }
}

@media screen and (max-width: 991px) {
    .photos {
      width: 97.9%;
    }    

    .image-horizontal-up {
      padding-bottom: 10px;
    }

    .ver {
      padding: 0px 5px 0px 0px ;
    }

    .hor {
      padding: 0px 0px 0px 5px ;
    }
}

@media screen and (max-width: 767px) {
    .photos {
      width: 97.4%;
    }
  }

@media screen and (max-width: 667px) {
    .photos {
      width: 96.7%;
    }
  }

@media screen and (max-width: 567px) {
    .photos {
      width: 96.3%;
    }
  }

@media screen and (max-width: 467px) {
    .photos {
      width: 95.5%;
    }
  }      

.press-icon {
  max-height: 100px;
  max-width: auto;
  padding: 10px;
  display: inline-block;
  margin: 0px 15px;
  opacity: 0.6;
}

.press-icon:hover { 
  opacity: 1;
} 

