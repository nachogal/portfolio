/* ==========================================================================
   Custom styles
   ========================================================================== */

.hero {
  overflow-x: auto;
  text-align: center;
  color: white;
  a, p {
    color: #555;
  }
}

@media screen and (max-width: 991px) {
  .hero {
    background-image: url(<%= asset_path('bg2.jpg') %>);
      a, p {
    color: #555;
    }
  }
}

.video {
  font-size: 1rem;
  text-transform: uppercase;
  display: inline-block;
  float: center;
}

.video:hover {
  opacity: 0.8;
  cursor: pointer;
}

@media (max-width: 767px) {
  .video  {
    margin: 0 0rem;
    }
  }

