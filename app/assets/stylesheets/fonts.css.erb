@font-face {
    font-family: 'Gotham Book';
    src: url('<%= asset_path("gotham-book-webfont.eot") %>');
    src: url('<%= asset_path("gotham-book-webfont.eot?#iefix") %>') format('embedded-opentype'),
         url('<%= asset_path("gotham-book-webfont.woff") %>') format('woff'),
         url('<%= asset_path("gotham-book-webfont.ttf") %>') format('truetype'),
         url('<%= asset_path("gotham-book-webfont.svg#gotham_book") %>') format('svg');
    font-weight: normal;
    font-style: normal;
}

